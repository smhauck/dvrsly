<%= render @post %>

<div>
  <% if Current.user %>
    <% if Current.user.id == @post.user_id %>
      <%= link_to "Edit", edit_post_path(@post), method: :get, class: "button is-link" %>
      <%= link_to "Delete", @post, data: {turbo_method: :delete, turbo_confirm: "Confirm Deletion"}, class: "button is-danger" %>
    <% end %>
  <% end %>
  <% if Current.user %><%= link_to "Comment", new_post_comment_path(@post), class: "button is-primary" %><% end %>
</div>
