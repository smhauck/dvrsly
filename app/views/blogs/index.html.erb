<% if @user %>
<% content_for :title, "u/" + @user.username + "/Blogs" %>
<% else %>
<% content_for :title, "Blogs" %>
<% end %>
<p style="color: green"><%= notice %></p>

<%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
<div id="blogs">
  <% @blogs.each do |blog| %>
    <div id="<%= dom_id blog %>" class="blog box">
      <p>
        <span class="blog-title"><%= link_to "b/" + sanitize(blog.title), blog %></span>
        <span class="blog-author"><%= link_to "u/" + blog.user.username, blog.user %></span>
      </p>
      <div class="blog-description"><%= truncate(strip_tags(blog.description), length: 250) %></div>
    </div>
  <% end %>
</div>
